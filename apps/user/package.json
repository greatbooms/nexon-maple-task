{
  "name": "user",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start:dev": "node ../../dist/apps/user/main.js",
    "build:dev": "nx build user --skip-nx-cache",
    "user:db-push:dev": "dotenv -e ./apps/user/.env -- prisma db push --schema apps/user/src/prisma/schema.prisma"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "node-env=development",
              "--mode=development"
            ]
          }
        }
      },
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "user:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "user:build:development"
          },
          "production": {
            "buildTarget": "user:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  }
}
